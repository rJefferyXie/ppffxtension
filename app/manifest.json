{
  "manifest_version": 3,
  "name": "PostPallas",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],

  "host_permissions": [
    "https://ppffxtensionpw.vercel.app/"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.indeed.com/*", "*://*.linkedin.com/*", "*://*.google.com/*"],
      "js": ["app.js", "userInfo.js"],
      "css": ["styles.css", "userInfo.css"]
    }
  ]
}